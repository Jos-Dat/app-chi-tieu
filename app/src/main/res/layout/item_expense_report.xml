<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FAFC"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_report_type"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="#F8FAFC"
                android:textSize="12sp"
                tools:text="Monthly" />

            <TextView
                android:id="@+id/tv_report_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#464D52"
                android:textSize="14sp"
                tools:text="01/01/2022 - 01/31/2022" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="#287CD5"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="$1,500.00" />

            <ImageButton
                android:id="@+id/btn_delete_report"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                android:src="@drawable/ic_delete"
                app:tint="#000000" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>